<UserControl x:Class="SchedulerApp.Views.ExportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SchedulerApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100"
             Background="#F9FAFB"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             RenderOptions.BitmapScalingMode="HighQuality">

    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F8FAFC" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4F46E5" Offset="0"/>
                        <GradientStop Color="#3730A3" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    SnapsToDevicePixels="True">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal"/>
                                        <VisualState Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                               To="#4338CA" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState Name="Pressed">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                               To="0.97" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                               To="0.97" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Border.RenderTransform>
                                    <ScaleTransform/>
                                </Border.RenderTransform>
                            </Border>
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"
                                              TextOptions.TextFormattingMode="Display"
                                              TextOptions.TextRenderingMode="ClearType"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RefreshButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    SnapsToDevicePixels="True">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal"/>
                                        <VisualState Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                               To="#047857" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState Name="Pressed">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                               To="0.97" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                               Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                               To="0.97" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Border.RenderTransform>
                                    <ScaleTransform/>
                                </Border.RenderTransform>
                            </Border>
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"
                                              TextOptions.TextFormattingMode="Display"
                                              TextOptions.TextRenderingMode="ClearType"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#4F46E5"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="#4F46E5"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True"/>
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"
                                              TextOptions.TextFormattingMode="Display"
                                              TextOptions.TextRenderingMode="ClearType"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3730A3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TemplateCard" TargetType="Border">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>

        <Style x:Key="ColorPickerPreview" TargetType="Border">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="3" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4F46E5"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4F46E5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextOptions.TextFormattingMode="Display"
                                              TextOptions.TextRenderingMode="ClearType"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3730A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1" Height="5" CornerRadius="2.5" Background="#E5E7EB">
                                <Rectangle x:Name="PART_SelectionRange" Fill="#4F46E5" RadiusX="2.5" RadiusY="2.5"/>
                            </Border>

                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="20" Height="20" Fill="#4F46E5" Stroke="White" StrokeThickness="1.5">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect BlurRadius="6" ShadowDepth="0.5" Opacity="0.2"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExportItemCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1.5" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4F46E5"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" UseLayoutRounding="True" SnapsToDevicePixels="True">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
            <StackPanel x:Name="MainContainer" Margin="20">
                <StackPanel x:Name="ExportListView">
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="📤 Export Manager"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#111827"/>
                    </StackPanel>

                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Your Exports"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Items.Count, ElementName=ExportsListControl, StringFormat='({0})'}"
                                           FontSize="12"
                                           Foreground="#6B7280"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"/>
                            </StackPanel>

                            <ItemsControl x:Name="ExportsListControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ExportItemCard}"
                                                MouseLeftButtonDown="ExportItem_MouseLeftButtonDown">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#111827"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:MMM dd, yyyy HH:mm}'}"
                                                                   FontSize="11"
                                                                   Foreground="#6B7280"/>
                                                        <TextBlock Text=" • "
                                                                   FontSize="11"
                                                                   Foreground="#6B7280"/>
                                                        <TextBlock Text="{Binding SourceSchedule.Name}"
                                                                   FontSize="11"
                                                                   FontWeight="Medium"
                                                                   Foreground="#4F46E5"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="Preview"
                                                            Style="{StaticResource OutlineButton}"
                                                            Width="85"
                                                            Height="32"
                                                            FontSize="11"
                                                            Tag="{Binding Id}"
                                                            Click="ViewExport_Click"
                                                            Margin="0,0,6,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="👁️" FontSize="11" Margin="0,0,3,0"/>
                                                                    <TextBlock Text="Preview" FontSize="11"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Content="Rename"
                                                            Style="{StaticResource ModernButton}"
                                                            Width="90"
                                                            Height="32"
                                                            FontSize="11"
                                                            Background="#3B82F6"
                                                            Tag="{Binding Id}"
                                                            Click="RenameExport_Click"
                                                            Margin="0,0,6,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="✏️" FontSize="11" Margin="0,0,3,0"/>
                                                                    <TextBlock Text="Rename" FontSize="11" TextTrimming="CharacterEllipsis" MaxWidth="60"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Style="{StaticResource ModernButton}"
                                                            Width="32"
                                                            Height="32"
                                                            Background="#EF4444"
                                                            Tag="{Binding Id}"
                                                            Click="DeleteExport_Click"
                                                            Padding="0">
                                                        <TextBlock Text="✕"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border x:Name="NoExportsPanel" 
                                    Background="#F8FAFC"
                                    CornerRadius="10"
                                    Padding="24"
                                    Margin="0,12,0,0"
                                    Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📭"
                                               FontSize="32"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="No exports yet"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Go to a schedule and click 'Export as PowerPoint' to create your first export"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               TextAlignment="Center"
                                               Margin="0,4,0,0"
                                               Width="320"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="ExportDetailView" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button x:Name="ExportBackButton"
                                Style="{StaticResource OutlineButton}"
                                Width="95"
                                Height="32"
                                FontSize="11"
                                Click="ExportBackButton_Click"
                                Visibility="Visible">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="←" Margin="0,0,3,0"/>
                                <TextBlock Text="All Exports"/>
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="ExportDetailTitle"
                                   Text="Export Adjustments"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#111827"
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,16" Height="450">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Preview"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock x:Name="SlideCounter"
                                                   Text="Slide 1 of 1"
                                                   FontSize="12"
                                                   Foreground="#6B7280"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"/>
                                    </StackPanel>

                                    <Border Background="#F8FAFC"
                                            CornerRadius="10"
                                            Padding="10"
                                            Margin="0,0,0,10"
                                            Height="280">
                                        <Grid>
                                            <Image x:Name="PreviewImage"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   SnapsToDevicePixels="True"
                                                   UseLayoutRounding="True"/>

                                            <Border x:Name="LoadingOverlay" 
                                                    Background="#FFFFFF"
                                                    CornerRadius="6"
                                                    Visibility="Collapsed">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <ProgressBar IsIndeterminate="True"
                                                                 Width="160"
                                                                 Height="3"
                                                                 Background="#E5E7EB"
                                                                 Foreground="#4F46E5"
                                                                 Margin="0,0,0,10"/>
                                                    <TextBlock Text="Generating preview..."
                                                               FontSize="12"
                                                               Foreground="#6B7280"/>
                                                </StackPanel>
                                            </Border>

                                            <Border x:Name="NoPreviewOverlay" 
                                                    Background="#F8FAFC" 
                                                    CornerRadius="6"
                                                    Visibility="Visible">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="👁️"
                                                               FontSize="24"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="Click 'Refresh' to see your schedule"
                                                               FontSize="12"
                                                               Foreground="#6B7280"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Border Style="{StaticResource GlassCard}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="PrevSlideButton"
                                                    Style="{StaticResource NavButton}"
                                                    Content="◀"
                                                    Click="PrevSlide_Click"
                                                    IsEnabled="False"/>

                                            <ListBox x:Name="SlideThumbnails"
                                                     Grid.Column="1"
                                                     Margin="12,0"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Height="45">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="50"
                                                                Height="32"
                                                                CornerRadius="5"
                                                                BorderThickness="1.5"
                                                                BorderBrush="#E5E7EB"
                                                                Cursor="Hand"
                                                                Margin="2"
                                                                MouseLeftButtonDown="SlideThumbnail_Click">
                                                            <Border.Background>
                                                                <ImageBrush ImageSource="{Binding PreviewImage}"
                                                                            Stretch="UniformToFill"/>
                                                            </Border.Background>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="#4F46E5"/>
                                                                            <Setter Property="BorderThickness" Value="2"/>
                                                                            <Setter Property="Effect">
                                                                                <Setter.Value>
                                                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1.5" Opacity="0.15" Color="#4F46E5"/>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>

                                            <Button x:Name="NextSlideButton"
                                                    Grid.Column="2"
                                                    Style="{StaticResource NavButton}"
                                                    Content="▶"
                                                    Click="NextSlide_Click"
                                                    IsEnabled="False"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="📋 Export Info"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,12"/>

                                    <StackPanel>
                                        <TextBlock Text="Schedule"
                                                   FontSize="11"
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,3"/>
                                        <TextBlock x:Name="SourceScheduleName"
                                                   Text="Unknown"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,10"/>

                                        <TextBlock Text="Created"
                                                   FontSize="11"
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,3"/>
                                        <TextBlock x:Name="CreatedDateText"
                                                   Text="Unknown"
                                                   FontSize="12"
                                                   Margin="0,0,0,10"/>

                                        <TextBlock Text="Status"
                                                   FontSize="11"
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,3"/>
                                        <TextBlock x:Name="ExportStatusText"
                                                   Text="Ready"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#10B981"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="Export Actions"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,12"/>

                                    <Separator Margin="0,0,0,12" Height="1" Background="#E5E7EB"/>

                                    <Button x:Name="ExportButton"
                                            Content="Export PowerPoint"
                                            Style="{StaticResource ModernButton}"
                                            Height="36"
                                            FontSize="13"
                                            Click="ExportButton_Click"
                                            Margin="0,0,0,8"/>

                                    <Button x:Name="RefreshPreviewButton"
                                            Content="Refresh"
                                            Style="{StaticResource RefreshButton}"
                                            Height="36"
                                            FontSize="13"
                                            Click="RefreshPreview_Click"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="🎨 Design Settings"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,6,0">
                                    <StackPanel>
                                        <TextBlock Text="Font Size"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Slider x:Name="TextSizeSlider"
        Style="{StaticResource ModernSlider}"
        Minimum="8"
        Maximum="24"
        Value="14"
        TickFrequency="0.5"
        Margin="0,0,0,4"
        ValueChanged="TextSizeSlider_ValueChanged"/>
                                        <TextBlock Text="{Binding Value, ElementName=TextSizeSlider, StringFormat='{}{0:F1}'}"
                                                   FontSize="11"
                                                   Foreground="#6B7280"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" 
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Cell Opacity"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Slider x:Name="CellOpacitySlider"
        Style="{StaticResource ModernSlider}"
        Minimum="0.1"
        Maximum="1.0"
        Value="0.9"
        TickFrequency="0.1"
        Margin="0,0,0,4"
        ValueChanged="CellOpacitySlider_ValueChanged"/>
                                        <TextBlock Text="{Binding Value, ElementName=CellOpacitySlider, StringFormat='{}{0:P0}'}"
                                                   FontSize="11"
                                                   Foreground="#6B7280"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,6,6">
                                    <StackPanel>
                                        <TextBlock Text="Text Color"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Border x:Name="TextColorPreview"
                                                Style="{StaticResource ColorPickerPreview}"
                                                Background="#1F2937"
                                                MouseLeftButtonDown="TextColorPreview_MouseLeftButtonDown"
                                                ToolTip="Click to change text color"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,6,6">
                                    <StackPanel>
                                        <TextBlock Text="Name Cells"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Border x:Name="NameCellColorPreview"
                                                Style="{StaticResource ColorPickerPreview}"
                                                Background="#3B82F6"
                                                MouseLeftButtonDown="NameCellColorPreview_MouseLeftButtonDown"
                                                ToolTip="Click to change name cells color"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="2"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="Time Cells"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Border x:Name="TimeCellColorPreview"
                                                Style="{StaticResource ColorPickerPreview}"
                                                Background="#0EA5E9"
                                                MouseLeftButtonDown="TimeCellColorPreview_MouseLeftButtonDown"
                                                ToolTip="Click to change time cells color"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,6,0">
                                    <StackPanel>
                                        <TextBlock Text="Days Row"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Border x:Name="DaysRowColorPreview"
                                                Style="{StaticResource ColorPickerPreview}"
                                                Background="#8B5CF6"
                                                MouseLeftButtonDown="DaysRowColorPreview_MouseLeftButtonDown"
                                                ToolTip="Click to change days row color"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1"
                                        Background="#F8FAFC"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,6,0">
                                    <StackPanel>
                                        <TextBlock Text="Background"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"/>
                                        <Border x:Name="BackgroundColorPreview"
                                                Style="{StaticResource ColorPickerPreview}"
                                                Background="#FFFFFF"
                                                MouseLeftButtonDown="BackgroundColorPreview_MouseLeftButtonDown"
                                                ToolTip="Click to change background color"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="2"
                                        Background="Transparent"
                                        Padding="10"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
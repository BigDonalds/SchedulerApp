                                                           FontSize="14"
                                                           Foreground="#64748B"/>
                                                <TextBlock x:Name="ScheduleShiftsCount"
                                                           Text="0"
                                                           FontSize="24"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Style="{StaticResource ScheduleItemCard}"
                                                Width="200"
                                                Margin="0,0,16,16">
                                            <StackPanel>
                                                <TextBlock Text="📊"
                                                           FontSize="24"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Coverage"
                                                           FontSize="14"
                                                           Foreground="#64748B"/>
                                                <TextBlock x:Name="ScheduleCoverage"
                                                           Text="0%"
                                                           FontSize="24"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>

                                    <Border Style="{StaticResource Card}" Margin="0,24,0,0">
                                        <StackPanel>
                                            <TextBlock Text="✏️ Edit Schedule Grid"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,20"/>

                                            <Border Background="#F8FAFC"
                                                    CornerRadius="8"
                                                    Padding="16"
                                                    Margin="0,0,0,16">
                                                <StackPanel>
                                                    <TextBlock Text="Selected Cell:"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Margin="0,0,0,12"/>

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock x:Name="SelectedCellInfo"
                                                                       Text="No cell selected"
                                                                       FontSize="14"
                                                                       Foreground="#6B7280"/>
                                                            <TextBlock x:Name="SelectedCellNames"
                                                                       Text=""
                                                                       FontSize="13"
                                                                       Foreground="#4F46E5"
                                                                       Margin="0,4,0,0"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <Button x:Name="AddNameButton"
                                                                Grid.Column="1"
                                                                Content="➕ Add Name"
                                                                Width="110"
                                                                Height="36"
                                                                Style="{StaticResource ModernButton}"
                                                                FontSize="13"
                                                                Click="AddNameToCell_Click"
                                                                Margin="0,0,8,0"/>

                                                        <Button x:Name="ChangeNameButton"
                                                                Grid.Column="2"
                                                                Content="✏️ Change Name"
                                                                Width="120"
                                                                Height="36"
                                                                Style="{StaticResource ModernButton}"
                                                                FontSize="13"
                                                                Background="#3B82F6"
                                                                Click="ChangeNameInCell_Click"/>
                                                    </Grid>

                                                    <TextBlock Style="{StaticResource InfoText}"
                                                               Text="Click on a cell in the grid above to select it, then add or change names in that cell."/>
                                                </StackPanel>
                                            </Border>

                                            <Border x:Name="SelectedCellAssignmentsContainer"
                                                    Background="#F8FAFC"
                                                    CornerRadius="8"
                                                    Padding="16"
                                                    Visibility="Collapsed">
                                                <StackPanel>
                                                    <TextBlock Text="Current Assignments in Selected Cell:"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Margin="0,0,0,12"/>

                                                    <ItemsControl x:Name="SelectedCellAssignmentsList">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Style="{StaticResource PersonItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock Text="{Binding}"
                                                                                   FontSize="14"
                                                                                   VerticalAlignment="Center"/>

                                                                        <Button Grid.Column="1"
                                                                                Style="{StaticResource SmallDeleteButton}"
                                                                                Tag="{Binding}"
                                                                                Click="RemoveNameFromCell_Click">
                                                                            <TextBlock Text="✕"
                                                                                       FontWeight="Bold"/>
                                                                        </Button>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="ExportPage" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                    </ScrollViewer.Resources>
                    <Views:ExportPage x:Name="ExportPageControl"/>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Grid Grid.ColumnSpan="2" Panel.ZIndex="1000">
            <Views:PopupSystem x:Name="PopupSystemControl" />
        </Grid>

    </Grid>
</Window>